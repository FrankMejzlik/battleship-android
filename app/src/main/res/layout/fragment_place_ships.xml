<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".placeShips.PlaceShipsActivity">

    <com.example.battleship.shipBoardsViewModel.ShipBoardsView
        android:id="@+id/view_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/txt_place_ships_player_name"
        />

    <TextView
        android:id="@+id/txt_place_ships_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_above="@+id/gl_ships"

        />

<!--        app:layout_constraintBottom_toTopOf="@id/gl_board"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@+id/view_board"-->
<!--        app:layout_constraintVertical_chainStyle="packed"-->

    <GridLayout
        android:id="@+id/gl_ships"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_alignParentBottom="true"
        >
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/txt_place_ships_player_name"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->

        <Button
            android:id="@+id/oneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:text="1" />
    </GridLayout>

    <Button
        android:id="@+id/btn_place_ships_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ok"
        android:layout_below="@+id/txt_place_ships_player_name"
        android:layout_toEndOf="@+id/gl_ships"/>
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/gl_board"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"/>-->

</RelativeLayout>